<Application x:Class="Dungeon_RPG.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dungeon_RPG"
            
             xmlns:view="clr-namespace:Dungeon_RPG.View"
             xmlns:vm="clr-namespace:Dungeon_RPG.ViewModel" 
             xmlns:vmwrap="clr-namespace:Dungeon_RPG.ViewModel.Wrappers">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <vm:LocalizationViewModel x:Key="LocalizationVM"/>

            <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
                <view:MainMenu />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CharacterCreatorViewModel}">
                <view:CharacterCreator/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PlayGameViewModel}">
                <view:PlayGame/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DungeonViewModel}">
                <view:Dungeon/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CharacterEditorViewModel}">
                <view:CharacterEditor/>
            </DataTemplate>
            

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
