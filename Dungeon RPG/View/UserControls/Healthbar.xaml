<UserControl x:Class="Dungeon_RPG.View.UserControls.Healthbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_RPG.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ProgressBar 
            Minimum="0" 
            Maximum="{Binding MaxHealthVM.Points}" 
            Value="{Binding CurrentHealthVM.Points}"
            Margin="3"
            MinHeight="20"
            Foreground="ForestGreen"/>
        <TextBlock 
            Text="{Binding CurrentHealthVM.Points}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            TextAlignment="Left"
            Margin="5 2 2 2"
            />
    </Grid>
</UserControl>
