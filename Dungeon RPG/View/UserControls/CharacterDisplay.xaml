<UserControl x:Class="Dungeon_RPG.View.CharacterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_RPG.View"
             xmlns:ctrl="clr-namespace:Dungeon_RPG.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <Border VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black" BorderThickness="2" CornerRadius="10">
        <ItemsControl  ItemsSource="{Binding AllStats}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Points}"
                                   Margin="3"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}" Grid.Column="1"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </Border>
        
        <StackPanel Grid.Column="1" >
            <TextBlock Text="{Binding Name}"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>
            <Image Source="{Binding SpritePath}" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            <ctrl:Healthbar/>
            <ctrl:Manabar/>
        </StackPanel>
        
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Level"/>
                <TextBlock Text="{Binding Level}"/>
            </StackPanel>
            <TextBlock Text="Equipped Weapon" HorizontalAlignment="Center" Margin="5"/>
            <ctrl:WeaponDisplay Width="70" DataContext="{Binding HeldWeapon}"/>
            <ctrl:Expbar/>

        </StackPanel>
     </Grid>   
</UserControl>
