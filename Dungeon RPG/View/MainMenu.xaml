<UserControl x:Class="Dungeon_RPG.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_RPG.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Name="btnPlayButton"
        d:Content="Play"
        Content="{Binding Source={StaticResource LocalizationVM}, Path=Play}"
        Command="{Binding GoToPlayGame}"
        Grid.Column="0"
        Grid.Row="1"
        Grid.ColumnSpan="2"
                Style="{StaticResource MenuButton}"
        />
        <Button Name="MenuButton"
                d:Content="Create Character"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=CreateCharacter}"
                Command="{Binding GoToCreateCharacter}"
                Grid.Column="0"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Style="{StaticResource MenuButton}"
                />
        <Button Name="btnItemLog"
                d:Content="Items"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=Items}"
                Grid.Column="0"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Style="{StaticResource MenuButton}"
                />
        <Button Name="btnSettings"
                d:Content="Settings"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=Settings}"
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Style="{StaticResource MenuButton}"
                />
        <ToggleButton 
                Name="btnLanguage"
                d:Content="Language"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=Language}"
                Command="{Binding Source={StaticResource LocalizationVM}, Path=ToggleLanguageCommand}"
                Grid.Column="5"
                Grid.Row="1"
                Margin="20"/>
        <Label  Name="lblSaveFile"
                d:Content="Selected Save File"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=SaveFile}"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.Column="3"
                />
        <ComboBox
                Name="cmboSaveFile"
            ItemsSource="{Binding CharacterStore.AllCharacters}"
            SelectedItem="{Binding SelectedCharacter}"
            DisplayMemberPath="Name"
                Grid.Column="5"
                Grid.Row="0"
                Margin="20"
                HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
