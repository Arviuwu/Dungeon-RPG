<UserControl x:Class="Dungeon_RPG.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_RPG.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Name="btnPlayButton"
                Content="{Binding Play}"
                Grid.Column="0"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"/>
        <Button Name="btnItemLog"
                Content="{Binding Items}"
                Grid.Column="0"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="5"/>
        <Button Name="btnSettings"
                Content="{Binding Settings}"
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="5"/>
        <ToggleButton 
                Name="btnLanguage"
                Content="{Binding Language}"
                Command="{Binding ToggleLanguageCommand}"
                Grid.Column="5"
                Grid.Row="1"
                Margin="20"/>
        <Label  Name="lblSaveFile"
                Content="{Binding SaveFile}"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Grid.Column="3"
                Width="Auto"/>
        <ComboBox
                Name="cmboSaveFile"
                Grid.Column="5"
                Grid.Row="0"
                Margin="20"/>
    </Grid>
</UserControl>
