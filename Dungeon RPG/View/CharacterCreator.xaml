<UserControl x:Class="Dungeon_RPG.View.CharacterCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_RPG.View"
             xmlns:view="clr-namespace:Dungeon_RPG.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Grid.LayoutTransform >
            <ScaleTransform x:Name="MainScale"/>
        </Grid.LayoutTransform>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="CharacterCreator"/>
        <Button
            Content="{Binding Source={StaticResource LocalizationVM}, Path=Menu}"
            d:Content="Menu"
            Grid.Column="5"
            Command="{Binding GoToMenu}"
            />
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.ColumnSpan="2">
            <Label Content="{Binding Source={StaticResource LocalizationVM}, Path=Name}" d:Content="Name"/>
            <TextBox Text="{Binding CharacterVM.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     Width="100"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel 
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Grid.RowSpan="4">
            <view:CharacterStats DataContext="{Binding CharacterVM}"/>
        </StackPanel>
        <Button Grid.Column="5"
                Grid.Row="4"
                Content="{Binding Source={StaticResource LocalizationVM}, Path=Play}"
                Command="{Binding GoToPlay}"
                />
    </Grid>
</UserControl>
